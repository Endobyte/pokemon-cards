mixin pokemonForm(card, actionURL, mode, title)

    div.form-panel
        div.header= title
        form(action=actionURL method='post')
            div.form-input
                label(for='name') Name:
                input(type='text' id='name' name='name' value=card.name)
            div.form-input
                label(for='type') Type:
                select(id='type' name='type' autocomplete='off')
                    each type in types
                        option(value = type selected = (type === card.type)) #{type}
            div.form-input
                label(for='type') HP:
                input(type='number' id='hp' name='hp' value=card.hp)
            div.form-input
                label(for='picture') Picture URL:
                input(type='text' id='picture' name='picture' value=card.picture)
            div.form-input
                label(for='moveCostOne') Move #1 Token Cost:
                select(id='moveCostOne' name='moveCostOne' autocomplete='off')
                    -for(let i = 1; i <= 3; i++)
                        option(value = i selected = (i === card.moveCostOne)) #{i}
            div.form-input
                label(for='moveNameOne') Move #1 Name:
                input(type='text' id='moveNameOne' name='moveNameOne' value=card.moveNameOne)
            div.form-input
                label(for='moveCostOneNum') Move #1 Damage:
                input(type='number' id='moveCostOneNum' name='moveCostOneNum' value=card.moveCostOneNum)
            div.form-input
                label(for='moveCostTwo') Move #2 Token Cost:
                select(id='moveCostTwo' name='moveCostTwo' autocomplete='off')
                    -for (let i = 1; i <= 3; i++)
                        option(value = i selected = (i === card.moveCostTwo)) #{i}
            div.form-input
                label(for='moveNameTwo') Move #2 Name:
                input(type='text' id='moveNameTwo' name='moveNameTwo' value=card.moveNameTwo)
            div.form-input
                label(for='moveCostTwoNum') Move #2 Damage:
                input(type='number' id='moveCostTwoNum' name='moveCostTwoNum' value=card.moveCostTwoNum)
            div.form-input
                label(for='weaknessOne') Weakness One:
                select(id='weaknessOne' name='weaknessOne' autocomplete='off')
                    each type in types
                        option(value = type selected = (type === card.weaknessOne)) #{type}
            div.form-input
                label(for='weaknessTwo') Weakness Two:
                select(id='weaknessTwo' name='weaknessTwo' autocomplete='off')
                    each type in types
                        option(value = type selected = (type === card.weaknessTwo)) #{type}
            div.form-input
                label(for='weaknessThree') Weakness Three:
                select(id='weaknessThree' name='weaknessThree' autocomplete='off')
                    each type in types
                        option(value = type selected = (type === card.weaknessThree)) #{type}
            div.form-input
                label(for='resistanceOne') Resistance One:
                select(id='resistanceOne' name='resistanceOne' autocomplete='off')
                    each type in types
                        option(value = type selected = (type === card.resistanceOne)) #{type}
            div.form-input
                label(for='resistanceTwo') Resistance Two:
                select(id='resistanceTwo' name='resistanceTwo' autocomplete='off')
                    each type in types
                        option(value = type selected = (type === card.resistanceTwo)) #{type}
            div.form-input
                label(for='resistanceThree') Resistance Three:
                select(id='resistanceThree' name='resistanceThree' autocomplete='off')
                    each type in types
                        option(value = type selected = (type === card.resistanceThree)) #{type}
            div.form-input
                label(for='retreatCost') Retreat Token Cost:
                select(id='retreatCost' name='retreatCost' autocomplete='off')
                    -for (let i = 1; i <= 3; i++)
                        option(value = i selected = (i === card.retreatCost)) #{i}
            div.row
                a.button.cancel(href='/') Cancel
                if (mode === 'edit')
                    a.button.delete(href=`/delete/${card.id}`) Delete
                button.button.save(type='submit') Submit